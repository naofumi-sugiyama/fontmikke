<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <!-- ヘッダー部分 -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">ログイン</h1>
      <p class="text-gray-600">アカウントにログインしてサービスをご利用ください</p>
    </div>

    <!-- フォーム部分 -->
    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with url: login_path, local: true, class: "space-y-6" do |f| %>

        <!-- フラッシュメッセージ（エラー表示） -->
        <% if flash[:alert] %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- メールアドレスフィールド -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
              メールアドレス
            </span>
          <% end %>
          <%= f.email_field :email,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out",
              placeholder: "example@email.com",
              required: true %>
        </div>

        <!-- パスワードフィールド -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
              パスワード
            </span>
          <% end %>
          <%= f.password_field :password,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out",
              placeholder: "パスワードを入力",
              required: true %>
        </div>

        <!-- ログインボタン -->
        <%= f.submit "ログイン",
            class: "w-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white py-3 px-4 rounded-lg font-medium hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transform transition duration-200 ease-in-out hover:scale-105 active:scale-95" %>
      <% end %>

      <!-- アカウント作成ページへのリンク -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          アカウントをお持ちでない方は
          <%= link_to 'こちらから新規登録', new_user_path,
              class: "font-medium text-blue-600 hover:text-blue-500 transition duration-200 ease-in-out" %>
        </p>
      </div>
    </div>
  </div>
</div>