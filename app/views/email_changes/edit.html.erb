<% content_for(:title, 'メールアドレス変更') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white shadow-md rounded-lg">
      <div class="bg-gray-50 px-6 py-4 border-b">
        <h4 class="text-lg font-semibold text-gray-800 mb-0">メールアドレス変更</h4>
      </div>
      <div class="p-6">
        <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded mb-6">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            <div>
              新しいメールアドレスに確認メールを送信します。<br>
              メール内のリンクをクリックして変更を完了してください。
            </div>
          </div>
        </div>

        <%= form_with url: email_change_path(current_user), method: :patch, local: true do |f| %>
          <div class="mb-4">
            <label for="current_email" class="block text-sm font-medium text-gray-700 mb-2">現在のメールアドレス</label>
            <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 text-gray-500" id="current_email" value="<%= current_user.email %>" disabled>
          </div>

          <div class="mb-4">
            <%= f.label :email, '新しいメールアドレス', class: 'block text-sm font-medium text-gray-700 mb-2' %>
            <%= f.email_field :email, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', required: true, placeholder: '新しいメールアドレスを入力してください' %>
          </div>

          <div class="mb-6">
            <%= f.label :email_confirmation, 'メールアドレス確認', class: 'block text-sm font-medium text-gray-700 mb-2' %>
            <%= f.email_field :email_confirmation, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', required: true, placeholder: '確認のため再度入力してください' %>
          </div>

          <div class="flex flex-col sm:flex-row sm:justify-end gap-3">
            <%= link_to 'キャンセル', root_path, class: 'px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300 transition duration-200 text-center' %>
            <%= f.submit '確認メールを送信', class: 'px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-200 cursor-pointer' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>